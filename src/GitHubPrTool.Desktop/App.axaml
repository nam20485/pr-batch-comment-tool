<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GitHubPrTool.Desktop.App"
             RequestedThemeVariant="Dark">
    <!-- Dark theme for better developer experience -->
    
    <Application.DataTemplates>
        <!-- Data templates will be added here for MVVM binding -->
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme />
        
        <!-- Application-wide styles -->
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Segoe UI, Helvetica, Arial, sans-serif"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Button styles for consistent UI -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Application.Styles>
</Application>